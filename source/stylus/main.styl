@font-face
  font-family: "DidactGothic-Regular"
  src: url('../fonts/DidactGothic-Regular.woff'), url('../fonts/DidactGothic-Regular.woff2')
  font-display: swap

@font-face
  font-family: "Inter-Light"
  src: url('../fonts/InterTight-Light.woff'), url('../fonts/InterTight-Light.woff2')
  font-display: swap
@font-face
  font-family: "Inter-Regular"
  src: url('../fonts/InterTight-Regular.woff'), url('../fonts/InterTight-Regular.woff2')
  font-display: swap

@font-face
  font-family: "NewYork-Regular"
  src: url('../fonts/NewYork-Regular.woff'), url('../fonts/NewYork-Regular.woff2')
  font-display: swap



@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin: 0 auto
  font-size: 18px
  font-family: "Inter-Light"
  font-weight: 300
  line-height: 130%
  color $color-white

.mark
  color: $color-light-brown
  background-color: inherit

.mark-bg
  background-color $color-light-brown
  border-radius: 32px
  color $color-white
  padding 0 20px 4px 20px
  display: inline-block;
  line-height: 100%;

.layout
  width: 100%
  height: 100%
  margin: 0 auto
  display: flex
  flex-direction: column
  overflow-x: hidden

.wrapper
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  +above($breakpoints.sm)
    max-width: 750px
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 996px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1220px

.wrapper-presentation
  margin: 0 auto
  +above($breakpoints.md)
    max-width: 1024px
  +above($breakpoints.xxxl)
    max-width: 1780px

.main
  flex: 1

.vertical-form
  display: flex
  flex-direction: column
  width 100%
  max-width: 320px
  margin: 0 auto
  gap: 9px
  +above($breakpoints.md)
    margin 0

.horizontal-form
  display: flex
  flex-direction: column
  gap: 20px
  align-items: center
  +above($breakpoints.sm)
    flex-direction: row
    justify-content: center
  +above($breakpoints.md)
    gap: 40px

.horizontal-form-start
  display: flex
  flex-direction: column
  gap: 20px
  align-items: center
  justify-content: center
  +above($breakpoints.sm)
    flex-direction: row
  +above($breakpoints.md)
    justify-content: start
    gap: 40px

