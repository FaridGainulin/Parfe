.about-section
  background: linear-gradient(to right, rgb(88, 115, 255), rgb(87, 180, 248))
  +above($breakpoints.md)
    background: linear-gradient(to right, rgb(88, 115, 255), rgb(87, 180, 248) 20%, rgb(87, 180, 248) 43%, white 40%)
  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.md)
      padding 129px 0 0 0

  &__inner
    display: flex
    flex-direction: column
    gap 10px
    +above($breakpoints.md)
      flex-direction: row
      gap 47px

  &__block
    width 100%
    max-width: 475px
    margin 0 auto
    +above($breakpoints.md)
      margin 0

  &__block-owner
    width 300px
    margin 10px auto 10px auto
    height: 140px
    border-radius: 20px
    backdrop-filter: blur(32.2px);
    background: rgba(255, 255, 255, 0.15)
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap 10px
    +above($breakpoints.sm)
      width 390px
    +above($breakpoints.md)
      margin 0 0 37px 43px

  &__owner-name
    font-size: 24px
    position relative

  &__img
    width 300px
    height: auto
    margin: 0 auto
    border-radius: 20px 20px 20px 20px
    +above($breakpoints.sm)
      width 390px
    +above($breakpoints.md)
      width 475px
      height: 492px
      margin 0
      border-radius: 20px 20px 0 20px

  &__quotes
    position: absolute
    top: -65px;
    right: -100px;

  &__title
    text-align: center
    padding 10px 0 20px
    +above($breakpoints.md)
      text-align: start
      padding 20px 0 60px

  &__content
    line-height: 110%
    width 100%
    max-width: 629px
    +above($breakpoints.sm)
      margin 0 auto
      max-width: 600px
      text-align: center
    +above($breakpoints.md)
      padding 0
      margin 0
      max-width: 629px
      line-height: 136%

.about-section-sub
  &__container
    padding 20px 0 20px 0
    display: flex
    flex-direction: column
    gap 10px
    +above($breakpoints.sm)
      max-width: 460px
      margin: 0 auto
    +above($breakpoints.md)
      margin: 0
      max-width: 100%
      flex-direction: row
      justify-content: space-between
      gap 0
      padding 62px 0 90px 0

  &__text
    width 100%
    max-width 319px
    display: flex
    align-items: center
    justify-content center
    margin: 0 auto
    +above($breakpoints.md)
      margin 0
      justify-content flex-start


  &__form
    width 100%
    max-width: 826px

  &__adaptive
    display: flex
    flex-direction: column
    gap: 8px
    padding-top 9px
    +above($breakpoints.sm)
      flex-direction: row