.about-section
  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.md)
      padding 129px 0 0 0

  &__inner
    display: flex
    flex-direction: column-reverse
    gap 10px
    +above($breakpoints.md)
      flex-direction: column
      flex-direction: row
      gap 47px

  &__block
    width 100%
    max-width: 475px
    margin 0 auto
    display flex
    flex-direction: column
    justify-content: flex-end
    padding-top: 20px

    +above($breakpoints.md)
      padding-top: 0
      position relative
      margin 0

      &::after
        content: ""
        width 50vw
        height calc(100% + 129px)
        position: absolute
        bottom: 0
        right: 0
        border-bottom-right-radius: 20px
        background-color: rgb(88, 115, 255)
        background-image: linear-gradient(270.00deg, rgb(87, 180, 248), rgb(88, 115, 255) 100%)
        background-repeat: no-repeat
        background-size: 845px 100%
        background-position: right
        z-index -1

  &__block-owner
    width 300px
    margin 10px auto
    height: 140px
    border-radius: 20px
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap 10px
    background: linear-gradient(270.00deg, rgb(87, 180, 248), rgb(88, 115, 255) 100%)
    +above($breakpoints.sm)
      width 390px
    +above($breakpoints.md)
      background: rgba(255, 255, 255, 0.15)
      backdrop-filter: blur(32.2px);
      margin 0 0 37px 43px

  &__owner-name
    font-size: 24px
    position relative

  &__img
    width 300px
    height: auto
    margin: 0 auto
    border-radius: 20px 20px 20px 20px
    +above($breakpoints.sm)
      width 390px
    +above($breakpoints.md)
      width 475px
      margin 0

  &__quotes
    position: absolute
    top: -65px;
    right: -100px;

  &__title
    text-align: center
    padding 10px 0 20px
    +above($breakpoints.md)
      text-align: start
      padding 20px 0 60px

  &__content
    line-height: 110%
    width 100%
    max-width: 629px
    +above($breakpoints.sm)
      margin 0 auto
      max-width: 600px
      text-align: center
    +above($breakpoints.md)
      text-align: left
      padding 0
      margin 0
      max-width: 629px
      line-height: 136%

.about-section-sub
  &__container
    padding 20px 0 20px 0
    display: flex
    flex-direction: column
    gap 10px
    +above($breakpoints.sm)
      max-width: 460px
      margin: 0 auto
    +above($breakpoints.md)
      margin: 0
      max-width: 100%
      flex-direction: row
      justify-content: space-between
      gap 0
      padding 62px 0 90px 0

  &__text
    width 100%
    max-width 319px
    display: flex
    align-items: center
    justify-content center
    margin: 0 auto
    +above($breakpoints.md)
      margin 0
      justify-content flex-start


  &__form
    width 100%
    max-width: 826px

  &__adaptive
    display: flex
    flex-direction: column
    gap: 8px
    padding-top 9px
    +above($breakpoints.sm)
      flex-direction: row