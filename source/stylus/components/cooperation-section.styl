.cooperation-section
  background-image: url("../images/cooperation-section-bg.jpeg")
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__container
    padding 20px 0 20px 0
    +above($breakpoints.md)
      padding 150px 0 91px 0

  &__title
    text-align: center

  &__text
    text-align: center
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 20px 0 80px 0

  &__items
    +above($breakpoints.lg)
      display: flex
      flex-direction: row
      justify-content center
      gap 20px

  &__item
    width 300px !important
    height 337px
    padding 12px
    border 1px solid $color-light-brown
    +above($breakpoints.xs)
      width 380px !important

  &__item-wrapper
    border 2px solid $color-light-brown
    background: linear-gradient(182.91deg, rgb(33, 33, 33) 28.892%,rgb(0, 0, 0) 83.516%)
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    padding 0 0 25px 0

  &__item-title
    color $color-light-brown
    padding 40px 0 45px 0

  &__item-line
    width 98px
    height: 1px
    border 1px solid $color-light-brown

  &__item-text
    padding 25px 0 30px 0